{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DERO Weekly Evaluation Report",
  "description": "Schema for weekly trading evaluation reports generated by DERO",
  "type": "object",
  "required": ["year", "week", "summary"],
  "properties": {
    "year": {
      "type": "integer",
      "description": "Year of the report"
    },
    "week": {
      "type": "integer",
      "minimum": 1,
      "maximum": 53,
      "description": "ISO week number"
    },
    "summary": {
      "type": "object",
      "description": "Weekly summary statistics",
      "required": ["days_analyzed", "total_trades", "total_pnl"],
      "properties": {
        "days_analyzed": { "type": "integer" },
        "green_days": { "type": "integer" },
        "total_trades": { "type": "integer" },
        "wins": { "type": "integer" },
        "losses": { "type": "integer" },
        "win_rate_pct": { "type": "number" },
        "total_pnl": { "type": "number" }
      }
    },
    "best_day": {
      "type": ["object", "null"],
      "description": "Best performing day of the week",
      "properties": {
        "date": { "type": "string" },
        "pnl": { "type": "number" },
        "regime": { "type": "string" }
      }
    },
    "worst_day": {
      "type": ["object", "null"],
      "description": "Worst performing day of the week",
      "properties": {
        "date": { "type": "string" },
        "pnl": { "type": "number" },
        "regime": { "type": "string" }
      }
    },
    "regime_performance": {
      "type": "object",
      "description": "Performance breakdown by market regime",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "days": { "type": "integer" },
          "trades": { "type": "integer" },
          "wins": { "type": "integer" },
          "losses": { "type": "integer" },
          "win_rate": { "type": "number" },
          "pnl": { "type": "number" }
        }
      }
    },
    "top_gating_reasons": {
      "type": "array",
      "description": "Most frequent gating block reasons",
      "items": {
        "type": "object",
        "properties": {
          "reason": { "type": "string" },
          "count": { "type": "integer" }
        }
      }
    },
    "common_patterns": {
      "type": "array",
      "description": "Most common pattern flags across the week",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "occurrences": { "type": "integer" },
          "severity": {
            "type": "string",
            "enum": ["NONE", "POSSIBLE", "CONFIRMED"]
          }
        }
      }
    },
    "recommended_investigation": {
      "type": "string",
      "description": "Single recommended investigation based on weekly data (NOT a tuning instruction)"
    },
    "daily_summaries": {
      "type": "array",
      "description": "Summary of each day in the week",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string" },
          "data_health": { "type": "string" },
          "regime": { "type": "string" },
          "trades": { "type": "integer" },
          "win_rate": { "type": "number" },
          "pnl": { "type": "number" }
        }
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Report generation timestamp"
    }
  }
}
